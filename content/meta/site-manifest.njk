---
permalink: /site.webmanifest
eleventyExcludeFromCollections: true
excludeFromSitemap: true
---
{
  "name": "{{ metadata.title }} - {{ metadata.shortDescription }}",
  "short_name": "{{ metadata.title }}",
  "start_url": "{{ metadata.url }}",
  "icons": [
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "theme_color": "{{ metadata.theme.spaceCadet }}",
  "background_color": "{{ metadata.theme.topaz }}",
  "display": "standalone"
}